{
  "name": "@shotleybuilder/svelte-table-kit",
  "version": "0.6.0",
  "description": "A comprehensive, AI-configurable data table component for Svelte and SvelteKit, built on TanStack Table v8",
  "author": "Sertantai",
  "license": "MIT",
  "keywords": [
    "svelte",
    "sveltekit",
    "table",
    "datagrid",
    "tanstack",
    "data-table",
    "airtable",
    "headless",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shotleybuilder/svelte-table-kit.git"
  },
  "bugs": {
    "url": "https://github.com/shotleybuilder/svelte-table-kit/issues"
  },
  "homepage": "https://github.com/shotleybuilder/svelte-table-kit#readme",
  "type": "module",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./styles": "./dist/styles/table-kit.css"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write ."
  },
  "peerDependencies": {
    "svelte": "^4.0.0 || ^5.0.0",
    "@tanstack/svelte-table": "^8.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tanstack/svelte-table": "^8.21.3",
    "@types/eslint": "^9.6.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.36.0",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "publint": "^0.1.9",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.0",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^5.0.11",
    "vitest": "^2.0.0"
  }
}
